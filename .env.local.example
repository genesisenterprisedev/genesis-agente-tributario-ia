# Gemini AI Configuration (Legacy - opcional)

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenRouter Configuration
# IMPORTANT: API key should be server-side only (no NEXT_PUBLIC_ prefix)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# CONFIGURAÇÃO DE MODELOS POR TIPO DE AGENTE
# ============================================

# Modelo padrão (fallback para erros ou se não especificado)
NEXT_PUBLIC_OPENROUTER_DEFAULT_MODEL=google/gemini-2.0-flash-001

# Agente de Documentos
NEXT_PUBLIC_OPENROUTER_DOCUMENT_MODEL=openai/gpt-4o-mini

# Agente de Código
NEXT_PUBLIC_OPENROUTER_CODE_MODEL=z-ai/glm-4.5-air:free

# Agente de Sugestões
NEXT_PUBLIC_OPENROUTER_SUGGESTION_MODEL=google/gemma-3-27b-it:free

# Modelo genérico (legacy)
NEXT_PUBLIC_OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Resend Email API (se usado no client)
NEXT_PUBLIC_RESEND_API_KEY=your_resend_api_key_here
NEXT_PUBLIC_RESEND_API_URL=https://api.resend.com/emails
